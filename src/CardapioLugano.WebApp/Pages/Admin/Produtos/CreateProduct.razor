@page "/admin/produto/cadastrar"

@layout AdminLayout

@inherits CreateProductForm

<PageTitle>Cadastrar produtos</PageTitle>


<MudPaper Class="px-8 pt-2 pb-4 mx-12 my-8 justify-center">

    <MudText Class="mt-8" Typo="Typo.h4">Cadastro do Artista</MudText>

    <MudForm>

        <MudTextField Class="mt-4" T="string" Placeholder="Nome do Produto"
                      Variant="Variant.Outlined"
                      @bind-Value="productName"
                      Required="true"
                      RequiredError="Campo obrigatório." />

        <MudTextField Class="mt-4" T="string" Placeholder="Descrição do Produto"
                      Variant="Variant.Outlined"
                      @bind-Value="description"
                      Lines="4"
                      Required="false"
                      RequiredError="Campo obrigatório." />

        <MudTextField Class="mt-4" T="double" Placeholder="Preço"
                      Variant="Variant.Outlined"
                      @bind-Value="price"
                      Lines="4"
                      Required="true"
                      RequiredError="Campo obrigatório." />

        <MudTextField Class="mt-4" T="int" Placeholder="Quantidade"
                      Variant="Variant.Outlined"
                      @bind-Value="stockQuantity"
                      Lines="4"
                      Required="true"
                      RequiredError="Campo obrigatório." />

        <MudSelect Class="mt-4" T="CardapioLugano.WebApp.Responses.CategoryResponse" Label="Categorias"
                   ToStringFunc="@convert"
                   Variant="Variant.Outlined"
                   ValueChanged="@CategorySelected"
                   AnchorOrigin="Origin.BottomCenter">
            @if (categories is not null)
            {
                @foreach (var category in categories)
                {
                    <MudSelectItem Value="category" />
                }
            }
        </MudSelect>

        <MudImage Class="mt-4" src="@fileImage" />
        <MudFileUpload T="IBrowserFile" Accept=".jpeg,.jpg,.png" FilesChanged="UploadFile">
            <ButtonTemplate>
                <MudButton HtmlTag="label"
                           Variant="Variant.Filled"
                           Color="Color.Primary"
                           StartIcon="@Icons.Material.Filled.PhotoCamera"
                           >
                    Imagem do produto
                </MudButton>
            </ButtonTemplate>
        </MudFileUpload>

        <div class="d-flex align-center justify-space-between mt-4">
            <MudButton Variant="Variant.Filled"
                       @onclick="Save"
                       Color="Color.Primary"
                       Class="ml-auto">
                Cadastrar
            </MudButton>
        </div>

    </MudForm>
</MudPaper>