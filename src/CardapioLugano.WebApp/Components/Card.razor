@inherits CardComponent


<div class="flex gap-2">
    <img 
        src="@(Product.Images.Any() ? Product.Images.First().ImageString : "default_image.png")"
        alt=""
        class="w-28 h-28 rounded-md hover:scale-110 hover:-rotate-2 duration-300" 
    />

    <div class="flex w-full flex-column">
        <p class="font-bold">@Product.Name</p>
        <p class="text-sm">@Product.Description</p>
        <div class="flex items-center gap-2 justify-between mt-3">
            <p class="font-bold text-lg">@Product.Price.ToString("C")</p>
            <button disabled="@IsBusy" class="@(IsBusy ? "bg-gray-700" : "bg-gray-900")  px-5 rounded" @onclick="@(e => AddItemCart(Id))">
                @if (IsBusy)
                {
                    <MudProgressCircular Style="color:white" Class="ms-n1 text-white text-lg" Size="Size.Small" Indeterminate="true" />
                }
                <MudIcon Class="@(IsBusy ? "ms-2 text-white text-lg" : "text-white text-lg")" Icon="@Icons.Material.Filled.AddShoppingCart" />
            </button>
        </div>
    </div>
</div>