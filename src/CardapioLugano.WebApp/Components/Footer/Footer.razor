@inherits FooterComponent

<footer class="w-full mx-auto h-12 py-2 fixed bottom-2 z-40 flex items-center justify-center">
    <button class="flex bg-red-500 rounded-lg py-1 px-3.5 items-center text-white font-bold gap-2"
        @onclick="@(e => GoToCart())"    
    >
        Visualizar Sacola
        <MudBadge Content="@CountCart" class="mx-6 my-4">
            <MudIcon Class="text-lg text-white" Icon="@Icons.Material.Filled.ShoppingBag" />
        </MudBadge>
    </button>
</footer>